<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".batchesfragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3">

                        <ImageView
                            android:id="@+id/selectstaffmemberbackbtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/backbtn"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Select Staff Members"
                            android:textAlignment="center"
                            android:textSize="14sp"

                            />

                        <ImageView

                            android:id="@+id/menubtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/menybtn"/>
                    </GridLayout>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="15dp"

                    >


                </androidx.cardview.widget.CardView>






            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardview1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/student"
                                    android:layout_margin="10dp"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/staff_icon"/>



                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Staff Id : 1 "
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Name : Lahiru"
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Mobile : +94771128607"
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Specialization : se"
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Job Rule : computer operator"
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="165dp"
                                android:padding="5dp"
                                android:text="Status : Active"
                                android:textAlignment="center"
                                android:textColor="#84D13C"
                                android:textSize="15dp"

                                />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="165dp"
                                    android:padding="5dp"
                                    android:text="Monthly"
                                    android:textAlignment="textEnd"
                                    android:textColor="#ff0006"
                                    android:textSize="15dp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/student"
                                    android:layout_margin="10dp"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/staff_icon"
                                    tools:ignore="DuplicateIds" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Staff Id : 2 "
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Name : Kamal"
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Mobile : +9477112343456"
                                        android:textAlignment="center"
                                        android:textColor="#576E82"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Specialization : IT"
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Job Rule : labour"
                                        android:textAlignment="textStart"
                                        android:textColor="#576E82"
                                        android:textSize="15dp" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="165dp"
                                android:padding="5dp"
                                android:text="Status : Active"
                                android:textAlignment="center"
                                android:textColor="#84D13C"
                                android:textSize="15dp"

                                />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="165dp"
                                    android:padding="5dp"
                                    android:text="Daily Wages"
                                    android:textAlignment="textEnd"
                                    android:textColor="#ff0006"
                                    android:textSize="15dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="290dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">



                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </FrameLayout>
</ScrollView>
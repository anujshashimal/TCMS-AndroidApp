<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".batchesfragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backbtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/backbtn"/>

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Staff List"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <ImageView

                    android:id="@+id/menubtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/menybtn"/>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="15dp"

                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Search"
                        android:textSize="30dp"

                        android:textAlignment="center"/>



                </androidx.cardview.widget.CardView>






            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/student"
                                    android:layout_margin="10dp"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/batchimg"/>



                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Staff Id : 1 "
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textColor="#84D13C"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Name : Lahiru"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        android:textColor="#84D13C"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Mobile : +94771128607"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        android:textColor="#84D13C"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Specialization : se"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        android:textColor="#84D13C"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Job Rule : computer operator"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        android:textColor="#84D13C"
                                        />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Monthly"
                                    android:textAlignment="center"
                                    android:textSize="15dp"
                                    android:padding="5dp"
                                    android:textColor="#ff0006"
                                    android:layout_marginTop="165dp"
                                    />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="165dp"
                                android:padding="5dp"
                                android:text="Status : Active"
                                android:textAlignment="center"
                                android:textColor="#84D13C"
                                android:textSize="15dp"

                                />

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/student"
                                    android:layout_margin="10dp"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/batchimg"
                                    tools:ignore="DuplicateIds" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Staff Id : 2 "
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:textColor="#84D13C"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Name : Kamal"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        android:textColor="#84D13C"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Mobile : +9477112343456"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        android:textColor="#84D13C"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Specialization : IT"
                                        android:textAlignment="center"
                                        android:textSize="15dp"
                                        android:padding="5dp"
                                        android:textColor="#84D13C"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Job Rule : labour"
                                        android:textAlignment="center"
                                        android:textColor="#84D13C"
                                        android:textSize="15dp" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="94dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="165dp"
                                    android:padding="5dp"
                                    android:text="Daily Wages"
                                    android:textAlignment="center"
                                    android:textColor="#ff0006"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="165dp"
                                android:padding="5dp"
                                android:text="Status : Active"
                                android:textAlignment="center"
                                android:textColor="#84D13C"
                                android:textSize="15dp"

                                />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="290dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/addbatch"
                        android:layout_margin="20dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="200dp"
                        android:src="@drawable/addbtn"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </FrameLayout>
</ScrollView>